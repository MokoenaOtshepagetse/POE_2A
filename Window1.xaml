<Window x:Class="POE_2A.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe List" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="recipeListBox" Margin="10" DisplayMemberPath="Name"/>
        <Button Content="View Recipe" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="ViewRecipeButton_Click"/>
    </Grid>
</Window>
